@keyframes color-change {
    0% {
      color: rgb(255, 81, 0);
    }
  
    50% {
      color: rgb(25, 0, 255);
    }
  
    100% {
      color: rgb(255, 0, 0);
    }
}

body {
    animation: color-change 3s infinite;
}

